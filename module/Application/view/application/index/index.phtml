<h1>Currency Rates</h1>
<div class="table-container">
    <input type="text" id="filterInput" placeholder="Type a currency name...">
    <table id="ratesTable">
        <thead>
            <tr>
                <th class="sorted" data-key="currency">
                    Currency 
                    <span class="sort-icon"></span>
                </th>
                <th class="sorted sorted-desc" data-key="value">
                    Value
                    <span class="sort-icon"></span>
                </th>
                <th class="sorted" data-key="amount">
                    Amount
                    <span class="sort-icon"></span>
                </th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<script src="js/rates.js"></script>